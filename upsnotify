

#!/bin/sh

SYSADMIN="root"
LOG="/var/log/ups/events.log"
MAILSW="/usr/bin/mail"
UPSSW="/usr/bin/upsc"
UPSNAME="UPSNAME[@UPSHOST]"

EVDATE=$(date)

MSG="$* on $(hostname)"

echo "$EVDATE - $MSG" >> $LOG

(
   echo "Subject: $MSG"
   echo " "
   echo "Event date: $EVDATE"
   echo " "
   $UPSSW $UPSNAME | grep -v driver
) | $MAILSW -s "$MSG" $SYSADMIN
exit 0
